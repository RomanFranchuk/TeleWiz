<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/navigation_drawer_icon_item_size"
        android:layout_height="@dimen/navigation_drawer_icon_item_size"
        android:layout_marginTop="@dimen/navigation_drawer_icon_item_margin"
        android:layout_marginRight="@dimen/navigation_drawer_icon_item_margin"
        android:layout_marginBottom="@dimen/navigation_drawer_icon_item_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channels"
        android:textSize="@dimen/navigation_drawer_item_text_size"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    </LinearLayout>

</LinearLayout>