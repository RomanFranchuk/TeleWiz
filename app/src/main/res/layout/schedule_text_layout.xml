<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/time_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/schedule_text_min_width"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/schedule_text_size"
        android:padding="@dimen/schedule_text_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/title_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/schedule_text_size"
        android:padding="@dimen/schedule_text_padding"
        android:background="?attr/schedule_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/time_show"
        android:layout_toEndOf="@+id/time_show" />
</RelativeLayout>